<link
  rel="stylesheet"
  href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
/>
<div class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="row w-100">
      <div class="col-lg-12">
        <div class="navbar-header">
          <button
            class="navbar-toggle"
            data-toggle="collapse"
          >
            <span class="icon-bar"></span><span class="icon-bar"></span
            ><span class="icon-bar"></span>
          </button>
          <a href="/" class="navbar-brand">HOME</a>
        </div>

        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav" style="display: inline;">
            <li <% if (page == "xss") { %> class="active" <% } %>><a href="/xss">XSS</a></li>
            <li <% if (page == "access") { %> class="active" <% } %>><a href="/access">Bad access</a></li>
          </ul>

          <ul class="navbar navbar-nav navbar-right w-30">
            <% if (user == undefined) { %>
            <li><a href="/login"><span class="glyphicon glyphicon-log-in" /> Login</a></li>
            <% } else { %>
            <li><a><span class="glyphicon glyphicon-user"></span> <%= user.username %></a></li>
            <li><a href="/logout"><span class="glyphicon glyphicon-log-in" /> Logout</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
